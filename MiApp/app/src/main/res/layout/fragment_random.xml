<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris"
    tools:context=".random">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margenTitulo"
        android:text="@string/tab_text_3"
        android:textColor="@color/white"
        android:textSize="@dimen/titulo" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margenDescripcion"
        android:text="@string/Random"
        android:textColor="@color/white"
        android:textSize="@dimen/descripcion" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRandom"
        android:layout_width="@dimen/RandomAncho"
        android:layout_height="458dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/margenContenido"
        android:foregroundGravity="center_horizontal" />

</FrameLayout>